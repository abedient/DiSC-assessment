    <div id="results"></div>

    <script>
        const selections = {};

        function selectScore(setIndex, wordIndex, score) {
            if (!selections[setIndex]) selections[setIndex] = {};
            selections[setIndex][wordIndex] = score;

            // Disable selected score for other words in the same set
            const setDiv = document.getElementById('set' + setIndex);
            const buttons = setDiv.querySelectorAll('.scores button');
            buttons.forEach(btn => {
                const btnScore = parseInt(btn.textContent);
                btn.disabled = Object.values(selections[setIndex]).includes(btnScore);
            });
        }

        function showResults() {
            let output = '<h3>Your Selections</h3><ul>';
            for (let set in selections) {
                output += `<li>Set ${parseInt(set)+1}: `;
                let scores = selections[set];
                let words = document.querySelectorAll('#set' + set + ' .word label');
                let wordScores = [];
                for (let i = 0; i < words.length; i++) {
                    wordScores.push(`${words[i].textContent} (${scores[i] || 'N/A'})`);
                }
                output += wordScores.join(', ') + '</li>';
            }
            output += '</ul>';
            document.getElementById('results').innerHTML = output;
        }
    </script>
